<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Promedio Diario PM 2.5 y PM 10</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
        table {
            margin: auto; 
            text-align:center; 
            border-collapse: collapse;
            table-layout: auto;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <!--ENCABEZADO-->
        <div class="row ">
            <hr/>
                <h2 style="text-align: center;"><span style="color: #2aa5d6;">Reporte de concentraciones</span></h2>
                <h4 style=" opacity: 0.5; text-align: center;" id="lblData">{{date}}</h4>
            <hr/>
            
        </div>
        <br>

        <!--TABLA-->
        <div class="row ">
            <div class="col" >
                <table class="table table-bordered" >
                    <thead style="background: #BFBFBF">
                        <tr>
                            <th>Estaci√≥n</th>
                            <th>Colonia</th>
                            <th>PM 2.5 &#956;g/m<sup>3</sup></th>
                            <th>PM 10 &#956;g/m<sup>3</sup></th>
                            <th>Datos (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @each(dat in data)
                        <tr>
                            <th> {{dat.monitor}}</th>
                            <th> {{dat.neighborhood}}</th>

                            @if(dat.pm2_average>=150.5)
                            <th style="color: #A8549D;">{{dat.pm2_average}}</th>
                            @elseif(dat.pm2_average>=55.5)
                            <th style="color: #F93131;">{{dat.pm2_average}}</th>
                            @elseif(dat.pm2_average>=35.5)
                            <th style="color: #FC7928;">{{dat.pm2_average}}</th>
                            @elseif(dat.pm2_average>=12.1)
                            <th style="color: #EDB02D;">{{dat.pm2_average}}</th>
                            @else
                            <th style="color: #38B208;">{{dat.pm2_average}}</th>
                            @endif

                            @if(dat.pm10_average>=355)
                            <th style="color: #A8549D;">{{dat.pm10_average}}</th>
                            @elseif(dat.pm10_average>=255)
                            <th style="color: #F93131;">{{dat.pm10_average}}</th>
                            @elseif(dat.pm10_average>=155)
                            <th style="color: #FC7928;">{{dat.pm10_average}}</th>
                            @elseif(dat.pm10_average>=55)
                            <th style="color: #EDB02D;">{{dat.pm10_average}}</th>
                            @else
                            <th style="color: #38B208;">{{dat.pm10_average}}</th>
                            @endif
                            
                            @if(dat.percentage>=75)
                            <th style="color: #38B208;"> {{dat.percentage}}</th>
                            @else
                            <th style="color: #EDB02D;">{{dat.percentage}}</th>
                            @endif
                        </tr>
                        @endeach
                    </tbody>
                </table>
             </div>
        </div>
        <br>
        <h4><span style="color: #2aa5d6;">Indice de colores</span></h4>
        <div class="inline">
            <span class="badge rounded-pill text-dark" style=" background-color: #38B208;">Buena</span>
            <span class="badge rounded-pill text-dark" style=" background-color: #EDB02D;">Aceptable</span>
            <span class="badge rounded-pill text-dark" style=" background-color: #FC7928;">Mala</span>
            <span class="badge rounded-pill text-dark" style=" background-color: #F93131;">Muy malo</span>
            <span class="badge rounded-pill text-dark" style=" background-color: #A8549D;">Extremadamente malo</span>
        </div>
        <br>
    </div>
    <!--Bootstrap Bundle-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
</body>
</html>